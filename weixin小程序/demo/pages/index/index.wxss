/**index.wxss**/
html,body{height: 100%}
page{
	height:100%;
}

.hide{display: none}
.show{display: block;}
.scroll-view{height:100%;}

.logo{
	width:219rpx;
	height:42rpx;
}
.ul{overflow:hidden;margin:20rpx 0 0 -10rpx;}
.li{float: left;width:50%;padding-left:10rpx;overflow: hidden;box-sizing: border-box;position:relative;}
.image-box{height:330rpx;}
.image{width:100%;height:100%;}
.btn{width: 2.2rem;border-radius:5rem;background: rgba(0,0,0,0.4);text-align: center;line-height:1rem;border: solid 1px #fff;color: #fff;font-size: 0.4rem;
            position: absolute;top: 0.5rem;right: 0.5rem;}
.box{width:100%;height:100rpx;padding:6rpx;box-sizing: border-box;}
.pic,.fans{width:40rpx;height:40rpx;border-radius:50%;vertical-align: middle;margin-right:10rpx}
.fans{width:32rpx;height:30rpx;border-radius:0;}
.name,.num{display: inline-block;width:120rpx;vertical-align: middle;overflow:hidden;white-space:nowrap;text-overflow:ellipsis;font-size:18rpx}
.num{margin-top:8rpx}