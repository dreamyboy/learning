html,body {
	height: 100%
}
page {
	height:100%;
}
.container {
	position: relative;
	padding: 0;
}
.video-box {
	width:100%;
	height:100%;
	background-size:100% 100%;
}
.video {
	width:100%;
	height:100%;
}
.num-box {
	position: absolute;
	left:30rpx;
	top: 50rpx;
	font-size: 30rpx;
	color: #fff;
}
.id-box {
	position: absolute;
	right:30rpx;
	top: 50rpx;
	font-size:20rpx;
	color: #fff;
	opacity: .7;
}
.num {
	margin-left: 20rpx
}
.msg-box {
	position: absolute;
	left: 0;
	bottom: 100rpx;
	width: 100%;
	height: 240rpx;
	color: #fff;
	font-size: 30rpx;
	padding:0 30rpx;
	box-sizing:border-box;
}
.msg-box text {
	color: #DCB155;
}
.hide {
	display: none;
}
.show {
	display: block;
}
.gift-box {
	width:100%;
	height:5rem;
	position: absolute;
	left: 0;
	bottom: 400rpx;
}
.gift-li {
	background: rgba(0,0,0,.3);
	border-radius:0 7.5rem 0.25rem 0;
	width:11rem;
	height:2.5rem;
	margin-bottom: .5rem;
	position: relative;
}
.pic,.gift-pic {
	border-radius: 100%;
	vertical-align: middle;
}
.pic {
	float: left;
	margin-left:.4rem;
	margin-right: .4rem;
	width:2.4rem;
	height:2.4rem;
	border: solid 1px #15D2C5;
}
.gift-pic {
	position: absolute;
	left:8rem;
	top: -1rem;
	width:3rem;
	height:3rem;
}
.name-box {
	float: left;
	vertical-align: middle;
	font-size:.5rem;
	color: #fff;
	margin-top: .36rem;
}
.name-box view {
	width:5rem;
	overflow:hidden;
	white-space:nowrap;
	text-overflow:ellipsis;
}
.gift-name {
	color: yellow;
	margin-top: .2rem;
}
.gift-num {
	position: absolute;
	top: -.3rem;
	left: 11rem;
	color: #b5ed6d;
	font-size: 1rem;
	font-weight:700;
}
.translate {
	animation:translate .7s linear 0s 1;
	-webkit-animation:translate .7s linear 0s 1;
}
@keyframes translate {
	0% {
	-webkit-transform:translate3d(-100%, 0, 0);
}
100% {
	-webkit-transform:translate3d(0, 0, 0);
}
}
@-webkit-keyframes translate {
	0% {
	-webkit-transform:translate3d(-100%, 0, 0);
}
100% {
	-webkit-transform:translate3d(0, 0, 0);
}
}
.zoom {
	animation:zoom .7s linear 0s 1;
	-webkit-animation:zoom .7s linear 0s 1;
}
@keyframes zoom {
	0% {
	opacity: 0;
	-webkit-transform: scale3d(8,8,8);
}
10% {
	opacity: 1;
	-webkit-transform: scale3d(1,1,1);
}
30% {
	opacity: 1;
	-webkit-transform: scale3d(3,3,3);
}
45% {
	opacity: 1;
	-webkit-transform: scale3d(0.5,0.5,0.5);
}
60%,75%,100% {
	opacity: 1;
	-webkit-transform: scale3d(1,1,1);
}
}
@-webkit-keyframes zoom {
	0% {
	opacity: 0;
	-webkit-transform: scale3d(8,8,8);
}
10% {
	opacity: 1;
	-webkit-transform: scale3d(1,1,1);
}
30% {
	opacity: 1;
	-webkit-transform: scale3d(3,3,3);
}
45% {
	opacity: 1;
	-webkit-transform: scale3d(0.5,0.5,0.5);
}
60%,75%,100% {
	opacity: 1;
	-webkit-transform: scale3d(1,1,1);
}
}
